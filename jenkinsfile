pipeline {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }

    stages {
        stage("Cleanup Workspace"){
            steps {
                cleanWs()
            }
        }
        
        stage('Code Checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/waldra/BankApp.git'
            }
        }
        
        stage('Compile') {
            steps {
                sh 'mvn clean test'
            }
        }

}